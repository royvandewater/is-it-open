<% content_for :js do %>
  activateNav('update');
<% end %>

<div class="row-fluid">
  <div class="offset4 span2">
    <%= form_for @gangplank do |f| %>
      <%= f.hidden_field :status, :value => 'open' %>
      <%= f.submit 'Open', :class => 'btn btn-large btn-primary' %>
    <% end %>
  </div>

  <div class="span2">
    <%= form_for @gangplank do |f| %>
      <%= f.hidden_field :status, :value => 'closed' %>
      <%= f.submit 'Closed', :class => 'btn btn-large btn-danger' %>
    <% end %>
  </div>
</div>
